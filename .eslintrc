{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "extends": [
    "airbnb-base"
  ],
  "plugins": [
    "html"
  ],
  "globals": {
    "_": false
  },
  "rules": {
    "no-param-reassign": 0,
    "no-multi-assign": 0,
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": "off",
    "import/extensions": ["error", "always", {
      "js": "never",
      "vue": "never"
    }]
  }
}